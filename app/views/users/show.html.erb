<div class="user-profile">
  <div class="media pull-left">
    <% avatar_url = current_user.avatar_url(230) %>
    <% if avatar_url %>
      <%= image_tag avatar_url, class: 'meida-object gravatar_lg' %>
    <% end %>

    <h4><%= current_user.email %></h4>
    <hr>
    <p><span class="glyphicon glyphicon-tasks"></span> Number of sign in: <%= current_user.sign_in_count %></p>
    <hr>
    <p><span class="glyphicon glyphicon-time"></span> Join on: <%= current_user.created_at %></p>
    <hr>

  </div>
  <div class="col-md-9 pull-right">
    <div class="js-items">
      <ul class="list-group">
        <% current_user.items.each do |item| %>
        <%= render partial: 'items/item', locals: { item: item } %>
        <% end %>
      </ul>
    </div>
    <div class="new-item">
      <div class="panel panel-default">
        <%= render partial: 'items/form', locals: { user: current_user, item: current_user.items.new } %>
      </div>
    </div>
  </div>
</div>
